<div class="mx-auto" style="width: 85%;">
  <%= form_with(url: search_topics_path, local: true, method: :get, class: "form-group") do |f| %>
    <%= f.text_field :keyword, placeholder: "投稿を検索する", class: "form-control form-control-lg" %>
    <%= f.submit "検索", class: "btn btn-outline-secondary" %>
  <% end %>
  <% @topics.each do |topic| %>
    <%= render partial: "topic", locals: { topic: topic } %>
  <% end %>
</div>