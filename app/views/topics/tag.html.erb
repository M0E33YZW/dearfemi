<%= render "topics/header" %>
<div class="card">
  <div class="card-body">
    <h4 class="card-title">
      <%= @tag.tagname %>
    </h4>
    <% @topics.each do |topic| %>
      <p class="card-text">
        <%= link_to topic_path(topic.id) do %>
          <%= image_tag topic.image.variant(gravity: :center, resize:"640x640^", crop:"640x640+0+0") if topic.image.attached? %>
        <% end %>
        <h6>
        <%= topic.title%>
        <%= topic.text%>
        </h6>
        <%= topic.created_at %>
      </p>
    <% end %>
  </div>
</div>
<br>